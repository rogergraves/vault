<!-- Скрипт, привязывающий событие click, открывающее модальное окно, к элементам, имеющим класс .btn -->
<script>
    $(document).ready(function () {

        $(".event").click(function () {
            //открыть модальное окно с id="myModal"
//            alert('aletr');
            $("#eventModal").modal('show');

//
        });
        $('#eventModal').on('shown.bs.modal', function () {
            //#myInput - id элемента, которому необходимо установить фокус
            $('#first_name').focus();
        });

        $(".member").click(function () {
            //открыть модальное окно с id="myModal"
            $("#memberModal").modal('show');


        });
        $('#memberModal').on('shown.bs.modal', function () {
            //#myInput - id элемента, которому необходимо установить фокус
            $('#query').focus();
        });

        $(".mailing_list").click(function () {
            //открыть модальное окно с id="myModal"
            $("#mailing_listModal").modal('show');


        });
        $('#mailing_listModal').on('shown.bs.modal', function () {
            //#myInput - id элемента, которому необходимо установить фокус
            $('#first_name').focus();
        })


    });
</script>