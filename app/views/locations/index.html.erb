

<h1>Locations</h1>

<table class="table table-striped ">
  <thead>
    <tr>
      <th>Header image</th>
      <th>Header text</th>
      <th>Title</th>
      <th>Description</th>
      <th>Gallery</th>
      <th>Map</th>
      <th>Address</th>
      <th>Phones</th>
      <th>Info email</th>
      <th>Support email</th>
      <th>Order email</th>
      <th>Prises</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%=image_tag( location.header_image.url(:thumb), class:'img-rounded')%></td>
        <td><%= location.header_text.present? %></td>
        <td><%= location.title %></td>
        <td><%= location.description %></td>
        <td><%= location.gallery.present? %></td>
        <td><%= location.map.present? %></td>
        <td><%= location.address %></td>
        <td><%= location.phones.present? %></td>
        <td><%= location.info_email.present? %></td>
        <td><%= location.support_email.present? %></td>
        <td><%= location.order_email.present? %></td>
        <td><%= location.prises.present? %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path,:class=>"btn btn-primary" %>
